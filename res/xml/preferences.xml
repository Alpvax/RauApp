<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Titles and Summaries are not required, and are generated from the key -->
    
    <PreferenceCategory 
        android:key="@prefKey/general_settings">
        <ListPreference
            android:key="@prefKey/language"
            android:defaultValue="RAU" />
        <!-- <CheckBoxPreference
            android:key="@prefKey/kbd_btns"
            android:defaultValue="true" /> -->
        <RingtonePreference
     		android:key="@prefKey/notification"
     		android:ringtoneType="notification"
     		android:showDefault="true"
     		android:defaultValue="content://settings/system/notification_sound" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:key="@prefKey/messaging_settings">
        <EditTextPreference 
            android:key="@prefKey/own_number"
        	android:inputType="phone" 
            android:defaultValue="" />
        <CheckBoxPreference
            android:key="@prefKey/auto_add_contact"
            android:defaultValue="true" />
        <!-- Create Contacts Screen before enabling
        <Preference 
            android:key="@prefKey/contact_list" >
	            <intent android:action="alpvax.rau.android.ContactsActivity" />
		</Preference>
		-->
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:key="@prefKey/fonts_settings">
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:key="@prefKey/debug_settings">
        <CheckBoxPreference
            android:key="@prefKey/send_to_self"
            android:defaultValue="false" />
    </PreferenceCategory>
    
</PreferenceScreen>