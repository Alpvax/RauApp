<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alpvax.rau"
    android:versionCode="1"
    android:versionName="@string/version_name" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@latinString/app_name"
        android:theme="@style/AppTheme" >
        <!-- android:name="alpvax.rau.AppStart" > -->
        <activity
            android:name=".SplashActivity"
            android:label="@latinString/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@latinString/app_name"
            android:theme="@style/AppTheme" >
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".util.settings.SettingsFragment$SettingsActivity"
            android:label="@latinString/title_activity_settings"
            android:parentActivityName=".android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alpvax.rau.android.MainActivity" />
        </activity>
    </application>

</manifest>
